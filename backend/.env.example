# Configuración de Django
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production-very-long-random-key-123456789
DJANGO_SETTINGS_MODULE=secure_project.settings

# Base de datos PostgreSQL
DATABASE_NAME=secure_app_db
DATABASE_USER=postgres
DATABASE_PASSWORD=yourpassword
DATABASE_HOST=localhost
DATABASE_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=jwt-insecure-change-this-in-production-secret-key-987654321
JWT_ACCESS_TOKEN_LIFETIME=5
JWT_REFRESH_TOKEN_LIFETIME=7

# Cifrado AES-256
ENCRYPTION_KEY=example-32-byte-key-change-in-prod!!

# Google OAuth (opcional - dejar vacío si no se usa)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email Configuration (opcional - para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# Cache (Redis opcional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/secure_app.log

# Rate Limiting
RATELIMIT_ENABLE=True

# Security Headers
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# Session Configuration
SESSION_COOKIE_AGE=3600
SESSION_COOKIE_SECURE=False

# CSRF Protection
CSRF_COOKIE_SECURE=False
